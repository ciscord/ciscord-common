{
  "workspaces": [
    "packages/core/theme",
    "packages/core/utils",
    "packages/core/styles",
    "packages/core/[!all]*",
    "packages/core/all"
  ],
  "private": true,
  "scripts": {
    "storybook": "start-storybook",
    "test": "jest",
    "storybook:build": "build-storybook -c .storybook -o docs",
    "storybook:deploy": "surge ./docs --domain $CIRCLE_PROJECT_REPONAME-$CIRCLE_BRANCH.surge.sh",
    "commit": "git-cz",
    "start": "cross-env NODE_ENV=development docz dev",
    "tsc": "rm -rf packages/core/**/lib && yarn workspaces run tsc",
    "build": "cross-env NODE_ENV=production yarn build:js",
    "build:icons": "node -r esm scripts/build-icons",
    "test:ci": "jest --ci --detectOpenHandles --runInBand --forceExit",
    "lint": "eslint .",
    "deploy-packages": "./deploy-packages.sh",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@changesets/cli": "^2.5.2",
    "@juggle/resize-observer": "^3.3.1",
    "@react-aria/interactions": "^3.1.0",
    "@styled-system/theme-get": "^5.1.2",
    "@tippyjs/react": "^4.0.2",
    "@types/react-dom": "^18.0.6",
    "@types/react-transition-group": "^4.4.4",
    "lodash": "^4.17.15",
    "polished": "^3.6.2",
    "promise": "^8.1.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-content-loader": "^6.2.0",
    "react-custom-scrollbars": "^4.2.1",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.27.1",
    "react-roving-tabindex": "^3.0.0",
    "react-transition-group": "^4.4.2",
    "react-use-measure": "^2.0.4",
    "scroll-behavior-polyfill": "^2.0.13",
    "styled-components": "^5.1.0",
    "styled-system": "^5.1.5",
    "styled-theming": "^2.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/helpers": "^7.7.0",
    "@babel/plugin-external-helpers": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.12.7",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.15.0",
    "@babel/runtime": "^7.7.2",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@semantic-release/git": "^7.1.0-beta.11",
    "@storybook/addon-a11y": "^6.4.19",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-backgrounds": "^6.4.19",
    "@storybook/addon-centered": "^5.3.21",
    "@storybook/addon-docs": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-knobs": "^6.3.0",
    "@storybook/addon-viewport": "^6.4.19",
    "@storybook/addons": "^6.4.19",
    "@storybook/react": "^6.4.19",
    "@testing-library/dom": "^7.2.1",
    "@testing-library/jest-dom": "^5.9.0",
    "@testing-library/react": "^10.0.2",
    "@testing-library/user-event": "^7.1.1",
    "@types/jest": "^24.0.13",
    "@types/styled-components": "^5.1.12",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "autoprefixer": "^9.8.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^27.0.6",
    "babel-loader": "^8.1.0",
    "babel-plugin-dev-expression": "^0.2.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "cherry-pick": "^0.5.0",
    "commitizen": "^4.0.4",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "csscomb": "^4.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "docz": "2.2.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.4",
    "eslint": "6.x",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^5.1.3",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "eslint-plugin-storybook": "^0.5.7",
    "esm": "^3.2.25",
    "fs-extra": "^8.1.0",
    "husky": "^1.1.4",
    "jest": "^27.0.6",
    "jest-circus": "^24.8.0",
    "jest-css-modules-transform": "^4.3.0",
    "jest-styled-components": "^7.0.5",
    "lint-staged": "^8.0.4",
    "mini-css-extract-plugin": "^0.4.4",
    "namor": "^2.0.2",
    "node-sass": "^6.0.1",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "path": "^0.12.7",
    "pkg-dir": "^4.2.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^1.11.0",
    "prop-types": "^15.7.2",
    "react-docgen": "^4.1.1",
    "react-is": "^16.13.1",
    "react-powerplug": "^1.0.0",
    "react-select": "^2.1.1",
    "react-select-event": "^3.0.0",
    "react-spring": "^8.0.27",
    "react-styled-flexboxgrid": "^3.2.1",
    "react-svg-loader": "^3.0.3",
    "sass-loader": "^7.1.0",
    "semantic-release": "^16.0.2",
    "string-replace-loader": "^2.1.1",
    "style-loader": "^0.23.0",
    "surge": "^0.21.3",
    "svgo": "^1.3.2",
    "terser-webpack-plugin": "^1.1.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.3.5",
    "webpack": "^4.32.2",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.2",
    "webpack-fix-style-only-entries": "0.0.5"
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "*.{js,json,ts,tsx}": "pretty-quick --staged",
      "*.{ts,tsx}": "tsc --noEmit --jsx react-jsx --esModuleInterop --resolveJsonModule",
      "*.{js,ts,tsx}": [
        "git add .",
        "eslint --fix"
      ]
    },
    "ignore": [
      "**/lib/**/*.js",
      "oldPackages/**"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
